@using System.Web.UI.WebControls
@using EfSearchModel.Extensions
@using EfSearchModel.Model
@{
    Layout = "~/Views/Shared/_LayoutMainTwo.cshtml";
    ViewBag.Title = "登录用户管理";
}
@section head{
    <script type="text/javascript" src="../../Javascripts/System/LoginUserManager.js"></script>
}
<div region="center" class="content-center" border="false">
    <table id="test"></table>
</div>
<div style="display: none">
    <div id="divQuery" style="padding: 5px; background: #fafafa;">
        <form action="javascript:;" id="formsearch" method="post">
            <table cellpadding="0" cellspacing="0" cellspacing="1" class="Admin_Table" style="width: 100%;margin: 0px auto;">
                <tr>
                    <td style="width:10%; text-align:right">用户名：</td>
                    <td style="width:40%; text-align:left">@Html.TextBox("Name", null, new { @class = "text", @style = "width:73.5%" }).ForSearch(QueryMethod.Contains)</td>
                    <td style="width:10%; text-align:right">名称：</td>
                    <td style="width:40%; text-align:left"> @Html.TextBox("MyName", null, new { @class = "text", @style = "width:73.5%" }).ForSearch(QueryMethod.Contains)</td>
                </tr>
            </table>
            <div style="height: 10px">
            </div>
            <div region="south" border="false" style="text-align: right; height: 30px; line-height: 30px;">
                <button class="btn-sub" type="button" onclick="Search()">
                    查询
                </button>
            </div>
        </form>
    </div>
</div>
<div id="dd" title="请确认操作" style="display: none;">
    <div class="dialog-content-me">
        您确认要强退所选的这<span id="ddText" style='color: red'></span>个用户吗？
    </div>
</div>