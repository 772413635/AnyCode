@model DBlinq.Sys_Menu
@{
    ViewBag.Title = "EditAllMenu";
    Layout = "~/Views/Shared/_LayoutMainTwo.cshtml";
}
@section head{
    <script type="text/javascript" src="@Url.Content("~/Javascripts/System/EditAllMenu.js")"></script>
}
<div region="center" border="false" class="content-center">
    <div class="btn-bar">
        <button class="btn-back" type="button" onclick="BaseBackPage('批量编辑菜单','菜单管理','/System/CommonSearch/MenuManager')">返回</button>
        <button class="btn-sub" type="submit" onclick="SaveFull()">保存</button>
    </div>
    <h3 class="title">批量编辑信息</h3>
    <form id="fm" action="javascript:;">
        @Html.Hidden("Name",(string)ViewBag.Id)
        <table class="tb-edit" border="0" cellpadding="4" cellspacing="0" width="50%">
            <tr>
                <td width="20%">
                    <label class="item-th">
                        名称</label>
                </td>
                <td width="80%">
                    @Html.Label("ShowName", (string)ViewBag.SName)
                </td>
            </tr>
        </table>
        <table class="tb-edit" border="0" cellpadding="4" cellspacing="0" width="50%">
            <tr>
                <td width="20%">
                    <label class="item-th">
                        属于</label>
                </td>
                <td width="80%">
                    @Html.DropDownListFor(c => c.ParentId, (SelectList)ViewBag.Type, new { @class = "text", style = "width: 20%;height:22px",disabled="disabled" })
                    <input type="checkbox" value="ParentId" onclick="IsEnabled(this)" />
                </td>
            </tr>
        </table>
        <table class="tb-edit" border="0" cellpadding="4" cellspacing="0" width="50%">
            <tr>
                <td width="20%">
                    <label class="item-th">
                        排序序列</label>
                </td>
                <td width="80%">
                    @Html.TextBoxFor(c => c.Sort, new { @class = "text validate[custom[integer]]", style = "width: 10%",disabled="disabled" })
                    <input type="checkbox" value="Sort" onclick="IsEnabled(this)"/>
                </td>
            </tr>
        </table>
        <table class="tb-edit" border="0" cellpadding="4" cellspacing="0" width="50%">
            <tr>
                <td width="20%">
                    <label class="item-th">
                        图标</label>
                </td>
                <td width="80%">
                    @Html.TextBoxFor(c => c.Iconic, new { @class = "text validate[required,maxSize[200]]", style = "width: 40%" ,disabled="disabled"})
                    <input type="checkbox" value="Iconic" onclick="IsEnabled(this)"/>
                </td>
            </tr>
        </table>
        <table class="tb-edit" border="0" cellpadding="4" cellspacing="0" width="50%">
            <tr>
                <td width="20%">
                    <label class="item-th">
                        备注</label>
                </td>
                <td width="80%">
                    @Html.TextBoxFor(c => c.Remark, new { @class = "text validate[maxSize[4000]]", style = "width: 60%",disabled="disabled" })
                    <input type="checkbox" value="Remark" onclick="IsEnabled(this)"/>
                </td>
            </tr>
        </table>
        <table class="tb-edit" border="0" cellpadding="4" cellspacing="0" width="50%">
            <tr>
                <td width="20%">
                    <label class="item-th">
                        状态</label>
                </td>
                <td width="80%">
                    @Html.DropDownListFor(c => c.State, new[]
                        {
                            new SelectListItem{Text="启用",Value="true"},
                            new SelectListItem{Text="禁用",Value="false"}
                        }, new { @class = "text", style = "width: 20%;height:22px",disabled="disabled" })
                    <input type="checkbox" value="State"  onclick="IsEnabled(this)" />
                </td>
            </tr>
        </table>

    </form>

    <div class="btn-bar" style="margin-top: 50px">
   <button class="btn-back" type="button" onclick="BaseBackPage('批量编辑菜单','菜单管理','/System/CommonSearch/MenuManager')">返回</button>
        <button class="btn-sub" type="submit" onclick="SaveFull()">保存</button>
    </div>
</div>
