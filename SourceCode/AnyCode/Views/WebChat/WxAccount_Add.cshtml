@model DBlinq.Sys_WebChat_Config
@{
    ViewBag.Title = "公众号维护";
    Layout = "~/Views/Shared/_LayoutMainTwo.cshtml";
}
@section head{
<script src="../../Javascripts/WebChat/WxAccount_Add.js" type="text/javascript"></script>
}
<div region="center" class="content-center" border="false">
    <form id="fm" action="javascript:;">
        @Html.HiddenFor(c => c.Id)
        <div class="btn-bar">
            <button class="btn-back" type="button" onclick=" BackPage();">返回</button>
            <button class="btn-sub" type="button" onclick="Save()">保存</button>
        </div>
        <h3 class="title">公众号信息</h3>
        <div>
            <table class="tb-edit" style="width: 100%">
                <tr>
                    <td>
                        <label class="item-th">名称</label>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.AppName, new { @class = "text validate[required,maxSize[60]]", style = "width:150px" })
                    </td>

                </tr>
                <tr>
                    <td>
                        <label class="item-th">Token</label>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Token, new { @class = "text validate[required,maxSize[20],ajax[ajaxToken]]", style = "width:100px" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="item-th">AppId</label>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.AppId, new { @class = "text validate[required,maxSize[18]]", style = "width:200px" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="item-th">AppSecret</label>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.AppSecret, new {@class = "text validate[required,maxSize[50]]", style = "width:400px"})
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="item-th">EncodingAESKey</label>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.EncodingAESKey, new { @class = "text validate[maxSize[100]]", style = "width:400px" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="item-th">用户名</label>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "text validate[required,maxSize[20]]", style = "width:150px" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="item-th">密码</label>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.PassWord, new { @class = "text validate[required,maxSize[20]]", style = "width:150px" })
                    </td>
                </tr>
            </table>
        </div>
        <div class="btn-bar">
            <button class="btn-back" type="button" onclick=" BackPage();">返回</button>
            <button class="btn-sub" type="button" onclick="Save()">保存</button>
        </div>
    </form>
</div>